{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "env": ["SUPABASE_URL", "SUPABASE_ANON_KEY", "FRONTEND_URL", "NODE_ENV"],
      "outputs": ["dist/**", "build/**", ".next/**", ".env", "$TURBO_DEFAULT$"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "format": {
      "cache": false
    },
    "format:check": {
      "outputs": []
    },
    "check": {
      "dependsOn": ["lint", "build", "test"],
      "outputs": []
    }
  },
  "globalDependencies": [".env"]
}
